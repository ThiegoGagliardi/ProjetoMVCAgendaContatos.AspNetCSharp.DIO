@model ProjetoMVC.Models.Contato

@{
    ViewData["Title"] = "Deletar Contato";
}

<h1 style="color:red;">Deseja Realmente Deletar esse Contato?</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">  @Html.DisplayNameFor(c => c.Nome)    </dt>
        <dt class="col-sm-10"> @Html.DisplayFor(c => c.Nome)        </dt>

        <dt class="col-sm-2">  @Html.DisplayNameFor(c => c.Telefone) </dt>
        <dt class="col-sm-10"> @Html.DisplayFor(c => c.Telefone)     </dt>

        <dt class="col-sm-2">  @Html.DisplayNameFor(c => c.Ativo)    </dt>
        <dt class="col-sm-10"> @Html.DisplayFor(c => c.Ativo)        </dt>
    </dl>
</div>


 <form asp-action="Deletar">
     <input type="submit" value="Deletar" class="btn btn-danger" />    
 </form>

<br/>

<a asp-action="Index">Voltar</a>

